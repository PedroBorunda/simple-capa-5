@{
    ViewBag.Title = "Users";
}
<h2>Users</h2>
<style>
    .glyphicon-pencil {
        color:green;
    }
    .glyphicon-remove {
        color:red;
    }
</style>

<table id="tbrole" class="table table-hover table-responsive">
    <tr>
        <th class="c">
            Username
        </th>
    
        <th class="c">
            Role
        </th>
        <th class="c">
            Email
        </th>
        <th class="c">
            Edit
        </th>
        <th class="c">
            Delete
        </th>
    </tr>
    @foreach (var item in Model.Users)
    {
        <tr>
            <td class="c">
                @item.Username
            </td>
        
            <td class="c">
                @item.Role
            </td>
        
            <td class="c">
                @item.Email
            </td>
            <td>
                <a href=@Url.Action("Update","User", new {
                   id=item.Id})>
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>
                
            </td>

            <td>
                <a href=@Url.Action("Delete","User", new {
                   id=item.Id})>
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                </a>
            </td>
        </tr>
    }
</table>